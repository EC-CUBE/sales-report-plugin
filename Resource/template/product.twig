{% extends 'SalesReport/Resource/template/index.twig' %}

{% set report_title = '商品別集計' %}
{% set action = url('admin_sales_report_product') %}
{% set menus = ['admin_sales_report', 'admin_sales_report_product'] %}

{% block chart %}
    <script>
        var graphData = {{ graphData|raw }};
        var config = {
            type: 'pie',
            data: graphData,
            options: {
                responsive: true
            }
        };

        window.onload = function() {
            //create pie chart
            var ctx = document.getElementById("chart").getContext("2d");
            var pieChart = new Chart(ctx, config);

            //export csv
            $('#export-csv').click(function () {
                $("#product-table").tableToCSV();
            });
        };
    </script>
{% endblock %}

{% block option %}{% endblock %}

{% block table %}
    {% if app.request.method == 'POST' %}
    <div class="row">
        <div class="flR" style="margin: 10px 20px 10px 0;">
            <a id="export-csv" class="btn btn-default" data-export="export">CSV ダウンロード</a>
        </div>
        <div class="col-md-12">
            <div class="box">
                <div class="box-body no-header no-padding">
                    <div class="table-responsive">
                        <table class="table table-striped" id="product-table">
                            <thead>
                                <tr>
                                    <th>商品コード</th>
                                    <th>商品名</th>
                                    <th>購入件数</th>
                                    <th>数量</th>
                                    <th>単価</th>
                                    <th>金額</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for row in rawData %}
                                <tr>
                                    <td>{{ row.ProductClass.code }}</td>
                                    <td>{{ row.ProductClass.Product.name }}</td>
                                    <td>{{ row.time|number_format }}</td>
                                    <td>{{ row.quantity|number_format }}</td>
                                    <td class="price-format">{{ row.price|price }}</td>
                                    <td class="hidden">{{ row.price|raw }}</td>
                                    <td class="price-format">{{ row.total|price }}</td>
                                    <td class="hidden">{{ row.total|raw }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div>
    {% endif %}
{% endblock %}